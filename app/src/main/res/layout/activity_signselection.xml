<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".SignSelection">    <LinearLayout        android:id="@+id/linearLayout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="30dp"        android:layout_marginLeft="30dp"        android:layout_marginEnd="30dp"        android:layout_marginRight="30dp"        android:orientation="horizontal"        android:weightSum="4"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/placefortask">        <Button            android:id="@+id/plus"            android:layout_width="70dp"            android:layout_height="70dp"            android:layout_marginRight="10dp"            android:layout_weight="1"            android:text="+"            android:background="@drawable/buttons_style_sign_selection"/>        <Button            android:id="@+id/minus"            android:layout_width="70dp"            android:layout_height="70dp"            android:layout_marginRight="10dp"            android:layout_weight="1"            android:text="-"            android:background="@drawable/buttons_style_sign_selection"/>        <Button            android:id="@+id/multiplication"            android:layout_width="70dp"            android:layout_height="70dp"            android:layout_marginRight="10dp"            android:layout_weight="1"            android:text="ร"            android:background="@drawable/buttons_style_sign_selection"/>        <Button            android:id="@+id/division"            android:layout_width="70dp"            android:layout_height="70dp"            android:layout_weight="1"            android:text="รท"            android:background="@drawable/buttons_style_sign_selection"/>    </LinearLayout>    <ImageButton        android:id="@+id/restart"        android:visibility="visible"        android:layout_width="70dp"        android:layout_height="70dp"        android:layout_marginTop="20dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        android:background="@drawable/button_round"        app:srcCompat="@android:drawable/ic_menu_rotate" />    <TextView        android:id="@+id/placefortask"        android:layout_width="match_parent"        android:layout_height="100dp"        android:layout_marginStart="30dp"        android:layout_marginLeft="30dp"        android:layout_marginEnd="30dp"        android:layout_marginRight="30dp"        android:background="@color/gray"        android:gravity="center"        android:textSize="30sp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintVertical_bias="0.3" />    <TextView        android:id="@+id/timer"        android:layout_width="105dp"        android:layout_height="32dp"        android:layout_marginStart="30dp"        android:layout_marginLeft="30dp"        android:layout_marginTop="40dp"        android:textSize="20dp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        tools:text="60" />    <TextView        android:id="@+id/placeforlevel"        android:layout_width="105dp"        android:layout_height="32dp"        android:layout_marginTop="40dp"        android:layout_marginEnd="30dp"        android:layout_marginRight="30dp"        android:gravity="end"        android:text="@string/start_level"        android:textSize="20dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/linecount"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="TextView"        android:visibility="gone"        app:layout_constraintBottom_toTopOf="@+id/placefortask"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintVertical_bias="0.618" /></androidx.constraintlayout.widget.ConstraintLayout>